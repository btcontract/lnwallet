<LinearLayout
    style="@style/StandardLinearLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainLayout">

    <LinearLayout
        style="@style/StandardXYMarginLinearLayout"
        android:id="@+id/mainOrbotCheck"
        android:visibility="gone">

        <TextView
            style="@style/FillingView"
            android:text="@string/orbot_status"/>

    </LinearLayout>

    <LinearLayout
        style="@style/StandardXYMarginLinearLayout"
        android:id="@+id/mainOrbotIssues"
        android:visibility="gone">

        <TextView
            style="@style/FillingView"
            android:textColor="#E68A00"
            android:id="@+id/mainOrbotMessage"
            android:layout_marginBottom="45dp"/>

        <com.ornach.nobobutton.NoboButton
            android:id="@+id/takeOrbotAction"
            android:layout_marginBottom="45dp"
            style="@style/ActionButton"/>

        <com.ornach.nobobutton.NoboButton
            app:nb_text="@string/orbot_action_skip"
            android:id="@+id/skipOrbotCheck"
            style="@style/DangerButton"/>

    </LinearLayout>
</LinearLayout>