<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/StandardXYMarginLinearLayout"
    android:id="@+id/contentWindow">

    <include
        android:id="@+id/inFlightPayments"
        layout="@layout/frag_in_flight_payments"/>

    <androidx.appcompat.widget.SwitchCompat
        android:layout_alignParentEnd="true"
        android:text="@string/dialog_routing"
        android:textColor="@color/text"
        style="@style/BoundedView"
        android:textSize="16sp"/>

    <!-- activity list -->

    <LinearLayout
        android:baselineAligned="true"
        style="@style/StandardLinearLayout">

        <ListView
            android:layout_weight="1"
            android:id="@+id/itemsList"
            android:layout_height="wrap_content"
            android:layout_width="0dp"/>

    </LinearLayout>

    <!-- bottom menu -->

    <LinearLayout
        android:background="@drawable/linear_layout_rounded_corners"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/actionBar"
        android:gravity="center">

        <com.ornach.nobobutton.NoboButton
            android:layout_margin="@dimen/chip_default_padding_edge"
            android:onClick="attemptSendFromClipboard"
            app:nb_text="@string/dialog_send"
            android:layout_width="110dp"
            style="@style/GrayButton"/>

        <com.ornach.nobobutton.NoboButton
            app:nb_drawableResource="@drawable/outline_qr_code_scanner_24"
            android:onClick="bringScanner"
            style="@style/GrayButton"/>

        <com.ornach.nobobutton.NoboButton
            android:layout_margin="@dimen/chip_default_padding_edge"
            android:onClick="bringReceiveOptions"
            app:nb_text="@string/dialog_receive"
            android:layout_width="110dp"
            style="@style/GrayButton"/>

    </LinearLayout>
</RelativeLayout>