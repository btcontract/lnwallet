<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    style="@style/FillingView">

    <androidx.cardview.widget.CardView
        card_view:cardCornerRadius="@dimen/corner_radius"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="5dp"
        style="@style/Card">

        <!-- Everything besides pay links -->

        <LinearLayout
            style="@style/FillingView"
            android:id="@+id/nonLinkContainer"
            android:orientation="horizontal"
            android:visibility="gone"
            android:gravity="center">

            <!-- BTC to LN -->

            <RelativeLayout
                style="@style/Tag"
                android:id="@+id/btcLn"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp">

                <ImageView
                    style="@style/BoundedView"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/ic_logo_bitcoin_24dp"/>

                <ImageView
                    style="@style/BoundedView"
                    android:layout_centerInParent="true"
                    android:background="@drawable/baseline_arrow_upward_18"
                    android:rotation="135"/>

                <ImageView
                    style="@style/BoundedView"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/ic_logo_lightning_24dp"/>

            </RelativeLayout>

            <!-- LN to BTC -->

            <RelativeLayout
                style="@style/Tag"
                android:id="@+id/lnBtc"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp">

                <ImageView
                    style="@style/BoundedView"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/ic_logo_lightning_24dp"/>

                <ImageView
                    style="@style/BoundedView"
                    android:layout_centerInParent="true"
                    android:background="@drawable/baseline_arrow_upward_18"
                    android:rotation="135"/>

                <ImageView
                    style="@style/BoundedView"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/ic_logo_bitcoin_24dp"/>

            </RelativeLayout>

            <!-- BTC incoming -->

            <LinearLayout
                style="@style/Tag"
                android:gravity="center"
                android:orientation="horizontal"
                android:id="@+id/btcIncoming">

                <ImageView
                    style="@style/BoundedView"
                    android:background="@drawable/baseline_arrow_upward_18"
                    android:rotation="180"/>

                <ImageView
                    style="@style/BoundedView"
                    android:background="@drawable/ic_logo_bitcoin_24dp"/>

            </LinearLayout>

            <!-- BTC outgoing -->

            <LinearLayout
                style="@style/Tag"
                android:gravity="center"
                android:orientation="horizontal"
                android:id="@+id/btcOutgoing">

                <ImageView
                    style="@style/BoundedView"
                    android:background="@drawable/ic_logo_bitcoin_24dp"/>

                <ImageView
                    style="@style/BoundedView"
                    android:id="@+id/btcOutgoingNormal"
                    android:background="@drawable/baseline_arrow_upward_18"/>

                <ImageView
                    style="@style/BoundedView"
                    android:id="@+id/btcOutgoingToSelf"
                    android:background="@drawable/baseline_change_circle_20"/>

            </LinearLayout>

            <!-- LN incoming -->

            <LinearLayout
                style="@style/Tag"
                android:gravity="center"
                android:orientation="horizontal"
                android:id="@+id/lnIncoming">

                <ImageView
                    style="@style/BoundedView"
                    android:background="@drawable/baseline_arrow_upward_18"
                    android:rotation="180"/>

                <ImageView
                    style="@style/BoundedView"
                    android:background="@drawable/ic_logo_lightning_24dp"/>

            </LinearLayout>

            <!-- LN outgoing -->

            <LinearLayout
                style="@style/Tag"
                android:gravity="center"
                android:orientation="horizontal"
                android:id="@+id/lnOutgoing">

                <ImageView
                    style="@style/BoundedView"
                    android:id="@+id/lnOutgoingBasic"
                    android:background="@drawable/ic_logo_lightning_24dp"/>

                <ImageView
                    style="@style/BoundedView"
                    android:id="@+id/lnOutgoingAction"
                    android:background="@drawable/baseline_arrow_circle_up_20"/>

                <ImageView
                    style="@style/BoundedView"
                    android:background="@drawable/baseline_arrow_upward_18"/>

            </LinearLayout>

            <!-- LN routed -->

            <LinearLayout
                style="@style/Tag"
                android:gravity="center"
                android:orientation="horizontal"
                android:id="@+id/lnRouted">

                <ImageView
                    style="@style/BoundedView"
                    android:background="@drawable/baseline_swap_horiz_18"/>

                <ImageView
                    style="@style/BoundedView"
                    android:background="@drawable/ic_logo_lightning_24dp"/>

            </LinearLayout>

            <!-- Content -->

            <LinearLayout
                style="@style/FillingView"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingStart="0dp"
                android:paddingTop="10dp"
                android:paddingEnd="15dp">

                <!-- Top line -->

                <RelativeLayout
                    android:id="@+id/detailsAndStatus"
                    android:layout_marginBottom="10dp"
                    style="@style/FillingView">

                    <ImageView
                        style="@style/BoundedView"
                        android:id="@+id/labelIcon"
                        android:layout_marginEnd="3dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/baseline_label_20"/>

                    <TextView
                        style="@style/FillingView"
                        android:id="@+id/description"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/labelIcon"
                        android:layout_toStartOf="@id/statusIcon"
                        android:layout_marginEnd="3dp"
                        android:textStyle="bold"
                        android:ellipsize="end"
                        android:maxLines="1"/>

                    <ImageView
                        style="@style/BoundedView"
                        android:id="@+id/statusIcon"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"/>

                </RelativeLayout>

                <!-- Bottom line -->

                <RelativeLayout style="@style/FillingView">

                    <TextView
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:id="@+id/amount"
                        android:textStyle="bold"
                        android:layout_toStartOf="@+id/meta"
                        android:layout_alignParentStart="true"
                        style="@style/BoundedView"/>

                    <TextView
                        android:maxLines="1"
                        android:id="@+id/meta"
                        android:layout_alignParentEnd="true"
                        style="@style/BoundedView"/>

                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Pay market links -->

        <RelativeLayout
            style="@style/FillingView"
            android:id="@+id/linkContainer"
            android:gravity="center_vertical"
            android:background="@drawable/border_gray"
            android:paddingBottom="10dp"
            android:paddingStart="15dp"
            android:paddingTop="10dp"
            android:paddingEnd="15dp"
            android:visibility="gone">

            <androidx.cardview.widget.CardView
                card_view:cardCornerRadius="@dimen/corner_radius"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/unusedAnchorId3"
                android:layout_height="64dp"
                android:layout_width="64dp">

                <ImageView
                    android:id="@+id/linkImage"
                    android:layout_height="64dp"
                    android:layout_width="64dp"/>

            </androidx.cardview.widget.CardView>

            <TextView
                style="@style/FillingView"
                android:id="@+id/domainName"
                android:layout_marginBottom="4dp"
                android:textColor="@color/colorAccent"
                android:layout_toStartOf="@+id/unusedAnchorId3"
                android:textStyle="bold"/>

            <TextView
                style="@style/FillingView"
                android:id="@+id/textMetadata"
                android:layout_marginBottom="10dp"
                android:layout_toStartOf="@+id/unusedAnchorId3"
                android:layout_below="@+id/domainName"
                android:maxLines="4"/>

            <TextView
                android:textSize="16sp"
                android:id="@+id/lastAttempt"
                android:layout_below="@+id/textMetadata"
                style="@style/FillingView"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>