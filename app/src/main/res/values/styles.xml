<resources>
    <style name="AppTheme" parent="Theme.AppCompat">
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/text</item>
        <item name="colorPrimaryDark">@color/bg</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppThemeNoActionBar" parent="AppTheme">
        <item name="android:windowBackground">@color/bg</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppThemeNoActionBarMain" parent="AppThemeNoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <!-- item styles -->

    <style name="BlueButton">
        <item name="nb_focusColor">@color/ln</item>
        <item name="nb_textColor">@color/colorAccent</item>
        <item name="nb_borderColor">@color/buttonBlueBorder</item>
        <item name="nb_backgroundColor">@color/buttonBlue</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingBottom">11dp</item>
        <item name="android:paddingRight">14dp</item>
        <item name="android:paddingLeft">14dp</item>
        <item name="android:paddingTop">9dp</item>
        <item name="nb_borderWidth">2dp</item>
        <item name="nb_radius">6dp</item>
    </style>

    <style name="GreenButton" parent="BlueButton">
        <item name="nb_focusColor">@color/buttonGreenRipple</item>
        <item name="nb_borderColor">@color/buttonGreenBorder</item>
        <item name="nb_backgroundColor">@color/buttonGreen</item>
    </style>

    <style name="RedButton" parent="BlueButton">
        <item name="nb_focusColor">@color/buttonRedRipple</item>
        <item name="nb_borderColor">@color/buttonRedBorder</item>
        <item name="nb_backgroundColor">@color/buttonRed</item>
    </style>

    <style name="GrayButton" parent="BlueButton">
        <item name="nb_focusColor">@color/buttonGrayRipple</item>
        <item name="nb_borderColor">@color/buttonGrayBorder</item>
        <item name="nb_backgroundColor">@color/bg</item>
    </style>

    <style name="GrayDivider">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:background">#33999999</item>
    </style>

    <style name="StandardLinearLayout" parent="AppTheme">
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">top</item>
    </style>

    <style name="StandardXYMarginLinearLayout" parent="StandardLinearLayout">
        <item name="android:background">@color/bg</item>
        <item name="android:padding">15dp</item>
    </style>

    <!-- view styles -->

    <style name="InputHintView">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginBottom">15sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">bottom|end</item>
    </style>

    <style name="BoundedView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:maxWidth">500sp</item>
    </style>

    <style name="FillingView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
    </style>

    <style name="YMarginFillingView" parent="FillingView">
        <item name="android:layout_marginBottom">25dp</item>
        <item name="android:layout_marginTop">25dp</item>
    </style>

    <style name="XMarginFillingView" parent="FillingView">
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginLeft">15dp</item>
    </style>

    <style name="XYMarginFillingView" parent="YMarginFillingView">
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginLeft">15dp</item>
    </style>

    <style name="XSmallMarginFillingView" parent="FillingView">
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:layout_marginLeft">12dp</item>
    </style>

    <style name="XYSmallMarginFillingView" parent="YMarginFillingView">
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:layout_marginLeft">12dp</item>
    </style>

    <style name="GrayDividerListView">
        <item name="android:drawSelectorOnTop">true</item>
        <item name="android:background">@color/buttonGrayBorder</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:divider">#33999999</item>
    </style>

    <style name="InFlightView">
        <item name="android:layout_marginStart">@dimen/search_bar_left_icon_left_margin</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">40sp</item>
        <item name="android:maxWidth">40sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:maxLines">1</item>
    </style>

    <!-- chip text -->

    <style name="ChipTextWhite">
        <item name="android:paddingTop">4sp</item>
        <item name="android:paddingLeft">8sp</item>
        <item name="android:paddingRight">8sp</item>
        <item name="android:paddingBottom">6sp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:background">@drawable/border_accent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginRight">6sp</item>
        <item name="android:layout_marginTop">6sp</item>
    </style>

    <style name="ChipTextGreen" parent="ChipTextWhite">
        <item name="android:textColor">@color/buttonGreenRipple</item>
        <item name="android:background">@drawable/border_green</item>
    </style>

    <style name="ChipTextBlue" parent="ChipTextWhite">
        <item name="android:textColor">@color/colorBlue</item>
        <item name="android:background">@drawable/border_blue</item>
    </style>

    <!-- nachos -->

    <style name="DefaultChipSuggestionTextView">
        <item name="chipVerticalSpacing">6dp</item>
        <item name="chipHorizontalSpacing">4dp</item>
        <item name="chipBackground">@color/colorAccent</item>
        <item name="android:inputType">textMultiLine|textVisiblePassword</item>
        <item name="android:completionThreshold">1</item>
        <item name="chipTextSize">18sp</item>
        <item name="chipHeight">28dp</item>
    </style>
</resources>
